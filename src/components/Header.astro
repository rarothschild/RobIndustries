---
import { Image } from '@astrojs/image/components';

import HeaderLink from './HeaderLink.astro';
import NavBar from './NavBar.astro';

import MainPic from '../images/me/Main.jpg'
---

<style>
    .columns:not(:last-child) {margin-bottom: 0;}
    .column {margin-top: auto;}
    #name {
        font-size: var(--font-size-xl);
        font-weight: bolder;
        text-align: center;
        color: hsl(0, 3%, 30%);
    }
    #contactInfo {
        text-align: center;
    }
</style>

<div class="flex flex-row  p-2 bg-[#2d183b]">
    <div class="basis-2/3 grid justify-items-center items-end">
        <h1 class="text-6xl font-extrabold text-[#aaa]">Rob Rothschild</h1>
    </div>
    <div class="basis-1/3 grid grid-cols-2 gap-4 place-items-end">
        <Image src={MainPic} alt="Main Photo" height={100} />
        <div class="grid font-bold text-lg items-center p-2 bg-[#609faf]" id="contactInfo">
            <p>Contact Info:</p>
            <p>rarothsc@gmail.com</p>
            <div class="flex flex-row justify-center gap-4">
                <a href="https://github.com/rarothschild" class="button is-small is-github">
                    <span class="icon"><i class="fab fa-github fa-lg"></i></span>
                </a>
                <a href="https://www.linkedin.com/in/robert-rothschild-33605aa6" class="button is-small is-linkedin">
                    <span class="icon"><i class="fab fa-linkedin fa-lg"></i></span>
                </a>
                <a href="https://www.instagram.com/rothschild.robert/" class="button is-small is-instagram">
                    <span class="icon"><i class="fab fa-instagram fa-lg"></i></span>
                </a>
            </div>
        </div>
    </div>
</div>

