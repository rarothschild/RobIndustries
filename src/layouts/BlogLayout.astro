---
import Layout from './Layout.astro';

export interface Props {
	content: {
		title: string;
		description: string;
        link?: string;
		pubDate?: string;
		updatedDate?: string;
		image?: string;
	};
}

const {
	content: { title, description, link, pubDate, updatedDate, image },
} = Astro.props;

---

<Layout title="Home">
    <article>
        {image && <img width={720} height={360} src={image} alt="" />}
        <h1 class="title">{title}</h1>
        {pubDate && <time>{pubDate}</time>}
        {
            updatedDate && (
                <div>
                    Last updated on <time>{updatedDate}</time>
                </div>
            )
        }
        <hr />
        <slot />
    </article>
</Layout>